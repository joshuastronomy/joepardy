
%h1.title.jumbotron JOEpardy questions Listing
= link_to 'Questions', new_qustion_path, :class => "btn btn-primary btn-block"
%br
= paginate @questsions
%br
%table.table
  %tr.headrow
    %th.tabhead Title
    %th.tabhead Body

  - @questsions.each do |question|
    %tr.question-card
      %td= question.title
      %td= markdown(question.body)
      %td= link_to 'Show', question_path(question), :class => 'btn btn-info'
      %td= link_to 'Answer', new_question_answer_path(question), :class => 'btn btn-info'
      - if question.user == current_user
        %td= link_to 'Edit', edit_question_path(question), :class => 'btn btn-info'
        %td= link_to 'Delete', question_path(question), :class => 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure you want to delete this question?' }
      %td Last changed #{time_ago_in_words quest.updated_at} ago
= paginate @questsions 




- if current_user
  %span.status Signed in as #{current_user.username}
  %br
  #{link_to "Logout", '/logout', :class => "status"}
- else
  = link_to 'Login', '/login', :class => "status"
  %br
  #{link_to 'Signup', '/signup', :class => "status"}
= yield
