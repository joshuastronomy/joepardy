
%h1.title.jumbotron Quiz List
-# = paginate @quizzes
%br
%table.table
  %tr
    %td Unpublished Quizzes
    - @unpub_quizzes.each do |fquiz|
      - fquiz.questions.each do |fquestion|
        %tr.question-card
          %td= fquestion.body
          %td= link_to 'Show', question_path(fquestion), :class => 'btn btn-info'
      %td= link_to 'Delete', quiz_path(fquiz), :class => 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure you want to delete this quiz?' }
      %td= link_to "Publish Quiz", pub_switch_quiz_path(fquiz), method: :put
  %br
  %tr
    %td Published Quizzes
    - @pub_quizzes.each do |tquiz|
      - tquiz.questions.each do |tquestion|
        %tr.question-card
          %td= tquestion.body
          %td= link_to 'Show', question_path(tquestion), :class => 'btn btn-info'
      %td= link_to 'Delete', quiz_path(tquiz), :class => 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure you want to delete this quiz?' }
      %td= link_to "Unpublish Quiz", unpub_switch_quiz_path(tquiz), method: :put

= yield
